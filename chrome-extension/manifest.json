{
  "manifest_version": 3,
  "name": "YT to MP3 Converter",
  "version": "1.0",
  "description": "Convert YouTube videos to MP3 files directly from your browser",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*",
    "https://yt2mp3-converter-auum.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YT to MP3 Converter"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}